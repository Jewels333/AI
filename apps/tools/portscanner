import socket
import time
s = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
target = input('Enter Target:')
targetNum1 = (input('Enter port height:'))
if targetNum1 == 'inf':
    
    targetNum1 = int()
else:
    targetNum1 = int(targetNum1)
targetNum2 = int(input('Enter port start:'))
target_ip = socket.gethostbyname(target)
print('Starting scan on host:', target_ip)
def port_scan(port):
    try:
        s.connect((target_ip, port))
        return True
    except:
        return False
type1 = input('Which type?(1/2)')
if type1 == '1':

    start = time.time()
    for port in range(targetNum2, targetNum1):
        if port_scan(port):
            print(f'port {port} is open      !!!!')
        else:
            print(f'port {port} is closed')
if type1 == '2':
    start = time.time()
    for port in range(targetNum2, targetNum1):
        if port_scan(port):
            print(f'port {port} is open')
        else:
            time.time()
end = time.time()
print(f'Time taken {end-start:.2f} seconds')
 