import sys
import sqlite3
from PyQt6.QtCore import QSize, Qt
from PyQt6.QtWidgets import QApplication, QMainWindow, QPushButton
selffile = 'AI'
def createtable(base, name):
     connection = sqlite3.connect(base + ".db")
     crsr = connection.cursor()
     try:
        sql_command = """CREATE TABLE {name} (
);"""
     except:
        print('failure')
     crsr.execute(sql_command)
     connection.close()


def createdb(name):
     connection = sqlite3.connect()
     crsr = connection.cursor()
     try:
        sql_command = """CREATE DATABASE {name};"""
     except:
        print('failure')
     crsr.execute(sql_command)
     connection.close()


def modify(base, action, value):
    print()


def data(base, extract):
    connection = sqlite3.connect(base + ".db")
    crsr = connection.cursor()
    try:
        sql_command = """SELECT {extract} FROM {base};"""
    except:
        print('failure')
    crsr.execute(sql_command)
    connection.close()

class MainWindow(QMainWindow):
    def __init__(self):
        super().__init__()

        self.setWindowTitle("AI")
        button = QPushButton("Testing")
        self.setCentralWidget(button)
def showwindow(window):
    app = QApplication(sys.argv)
    window = MainWindow()
    window.show()
    app.exec()

def failure(type):
    if type == 'SQLFail':
        print()
    if type == 'WindowFail':
        print()
